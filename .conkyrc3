# Sticker Conky by Skinwalker aka Prem K. Murugan
# http://skinwalker.wordpress.com

own_window yes
own_window_colour 18191b
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
use_spacer right
font -*-terminus-*-*-*-*-12-*-*-*-*-*-iso8859-15
alignment top_right
gap_y 39
gap_x 24

# --- Colours, Sizes, Fonts & Margins --- #
update_interval 1.0
minimum_size 110 3
stippled_borders 3
border_margin 5
border_width 6
default_color a5a8a9

# --- Text --- #
draw_outline no
draw_borders no
uppercase no
draw_shades no

TEXT
${color b5494a}FreeBSD ${color 665c64}- ${color b57f49}The Power To Serve${color 659b49}${hr 1}
${color 207fb8}${time %A} ${time %e} ${time %B} ${time %G}${alignr} ${time %H:%M:%S}
${color 60b549}Machine$color $nodename ${alignr} ${color afb549}Uptime$color $uptime
${color b5494a}Kernel$color $kernel ${alignr} ${color 49a8b5}Arch$color $machine
