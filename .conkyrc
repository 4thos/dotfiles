# Conky configuration for ScrotWM Bar

##############################################
#  Settings
##############################################
out_to_x no
background no
out_to_console yes
update_interval 0.1
total_run_times 0
use_spacer none

#no_buffers yes
#cpu_average_samples 1
#net_average_samples 1

TEXT
U: ${uptime_short} | C: ${cpu cpu0}% | R: ${memperc}% | T: ${acpitemp}C | B: ${battery} | H: ${fs_used}/${fs_size} | V: ${exec mixer | grep vol | awk '{ print $7}' | sed -e 's/:[0-9]*$//'}% | P: ${mpd_smart} ($mpd_percent}%) 
